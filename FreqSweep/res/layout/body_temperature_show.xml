<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >

    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/title2_bg_temperature"
            android:id="@+id/title_bg_temperature"
             />
        
        
        <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperature_arrow"
            android:background="#00000000"
            android:layout_gravity="right"
            android:src="@drawable/arrow_fold"
            />
        
    </FrameLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/temperature_detail"
        >
    
        <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_marginTop="20dip"
        >
        
        <TextView android:text="体温："
            android:layout_height="wrap_content"
            android:layout_weight="1"
             style="@style/title_ext"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            />
        
        <TextView android:id="@+id/temperature"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
             style="@style/title_ext"
            android:layout_weight="2"/>
        
    </LinearLayout>
    
    <ImageButton 
       android:id="@+id/save_temperature_record"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:background="#00000000"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
       android:src="@drawable/btn_save_weight_temperature"
       />
	</LinearLayout>
    
    
</LinearLayout>
    